    {id: "blueberry", name: "ğŸ« Blueberry"},
    {id: "banana", name: "ğŸŒ Banana"},
    {id: "strawberry", name: "ğŸ“ Strawberry"},
    {id: "kiwi", name: "ğŸ¥ Kiwi"},
    {id: "orange", name: "ğŸŠ Orange"},
